{{!-- Required context:
viewModel: {ButtonDeleteViewModel}
cssClass: {String | undefined}
fill: {Boolean | undefined}
--}}
<span class="component-button-delete{{#if fill}} fill-button-light{{else}} square-button-light{{/if}}{{#if (not viewModel.isEditable)}} disabled{{/if}}{{#if cssClass}} {{cssClass}}{{else}} font-size-default{{/if}}">
  <a class="custom-system-button pad-sm button flex flex-center" 
    title="{{viewModel.localizedTitle}}"
    id="{{viewModel.id}}"
  >
    <i class="fas fa-trash"></i>
  </a>
</span>