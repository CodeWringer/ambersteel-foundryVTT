{{!-- Requires context:
viewModel: {InjuryChatMessageViewModel}
--}}
<section>
  {{!-- Header --}}
  <div class="flex flex-row">
    <div class="flex flex-center">
      <img class="inline-img header-image margin-r-sm" name="img" src="{{viewModel.item.img}}" title="{{viewModel.item.name}}" height="35" width="35" />
    </div>
    <h2 class="flex-grow">
      {{viewModel.item.name}}
    </h2>
  </div>
  {{!-- Limit --}}
  <div class="flex flex-row sheet-block margin-b-md">
    <div class="width-min-xl fancy-font">
      {{localize "ambersteel.labels.limit"}}
    </div>
    <div class="flex-grow">
      {{viewModel.item.data.data.limit}}
    </div>
  </div>
  {{!-- Time to heal --}}
  <div class="flex flex-row sheet-block margin-b-md">
    <div class="width-min-xl fancy-font">
      {{localize "ambersteel.labels.timeToHeal"}}
    </div>
    <div class="flex-grow">
      {{viewModel.item.data.data.timeToHeal}}
    </div>
  </div>
  {{!-- Description --}}
  <div class="sheet-block multiline">
    {{viewModel.item.data.data.description}}
  </div>
</section>