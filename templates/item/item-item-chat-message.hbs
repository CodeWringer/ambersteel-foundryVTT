{{!-- Requires context:
isEditable: {Boolean}
isSendable: {Boolean}
item: {Item} = {
  id: {String}
  name: {String}
  img: {String}
  data: {Object} = {
    data: {Object} = {
      description: {String}
    }
  }
}
--}}
<section>
  {{!-- Header --}}
  <div class="flex flex-row">
    <div class="flex flex-center">
      <img class="inline-img header-image margin-r-sm" name="img" src="{{item.img}}" title="{{item.name}}" height="35" width="35" />
    </div>
    <h2 class="flex-grow">
      {{item.name}}
    </h2>
  </div>
  {{!-- Description --}}
  <div class="sheet-block multiline">
    {{item.data.data.description}}
  </div>
</section>