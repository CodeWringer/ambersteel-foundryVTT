{{!-- Requires context:
viewModel: {ItemChatMessageViewModel}
--}}
<section class="custom-system-chat-message" 
  data-view-model-id="{{viewModel.id}}"
  data-document-id="{{viewModel.item.id}}"
>
  {{!-- Header --}}
  <div class="flex flex-row">
    <div class="flex flex-center">
      {{#if viewModel.allowPickup}}
        {{> buttonTakeItem viewModel=viewModel.vmBtnTakeItem }}
      {{/if}}
    </div>
    <div class="flex flex-center">
      <img class="inline-img header-image margin-r-sm" name="img" src="{{viewModel.item.img}}" title="{{viewModel.item.name}}" height="35" width="35" />
    </div>
    <h2 class="flex-grow">
      {{viewModel.item.name}}
    </h2>
  </div>
  {{!-- Bulk --}}
  <div class="flex flex-row sheet-block margin-b-md">
    <div class="width-min-xxl fancy-font">
      {{localize "ambersteel.labels.bulk"}}
    </div>
    <div class="flex-grow">
      {{viewModel.item.data.data.bulk}}
    </div>
  </div>
  {{!-- Quantity --}}
  <div class="flex flex-row sheet-block margin-b-md">
    <div class="width-min-xxl fancy-font">
      {{localize "ambersteel.labels.quantity"}}
    </div>
    <div class="flex-grow">
      {{viewModel.item.data.data.quantity}}
    </div>
  </div>
  {{!-- Max quantity --}}
  <div class="flex flex-row sheet-block margin-b-md">
    <div class="width-min-xxl fancy-font">
      {{localize "ambersteel.labels.maxQuantity"}}
    </div>
    <div class="flex-grow">
      {{viewModel.item.data.data.maxQuantity}}
    </div>
  </div>
  {{!-- Description --}}
  <div class="sheet-block multiline">
    {{viewModel.item.data.data.description}}
  </div>
</section>