{{!-- Requires context:
isEditable: {Boolean}
isSendable: {Boolean}
item: {Item} = {
  id: {String}
  name: {String}
  img: {String}
  data: {ItemData} = {
    data: {Object} = {
      description: {String}
      gmNotes: {String}
      isCustom: {Boolean}
      quantity: {Number}
      maxQuantity: {Number}
      bulk: {Number} - Derived!
      shape: {Object} = {
        width: {Number}
        height: {Number}
      }
      isOnPerson: {Boolean}
    }
  }
}
allowPickup: {Boolean}
--}}
<section>
  {{!-- Header --}}
  <div class="flex flex-row">
    <div class="flex flex-center">
      {{#if allowPickup}}
        {{> buttonTakeItem target=item contextType="chat-message" }}
      {{/if}}
    </div>
    <div class="flex flex-center">
      <img class="inline-img header-image margin-r-sm" name="img" src="{{item.img}}" title="{{item.name}}" height="35" width="35" />
    </div>
    <h2 class="flex-grow">
      {{item.name}}
    </h2>
  </div>
  {{!-- Bulk --}}
  <div class="flex flex-row sheet-block margin-b-md">
    <div class="width-min-xxl fancy-font">
      {{localize "ambersteel.labels.bulk"}}
    </div>
    <div class="flex-grow">
      {{item.data.data.bulk}}
    </div>
  </div>
  {{!-- Quantity --}}
  <div class="flex flex-row sheet-block margin-b-md">
    <div class="width-min-xxl fancy-font">
      {{localize "ambersteel.labels.quantity"}}
    </div>
    <div class="flex-grow">
      {{item.data.data.quantity}}
    </div>
  </div>
  {{!-- Max quantity --}}
  <div class="flex flex-row sheet-block margin-b-md">
    <div class="width-min-xxl fancy-font">
      {{localize "ambersteel.labels.maxQuantity"}}
    </div>
    <div class="flex-grow">
      {{item.data.data.maxQuantity}}
    </div>
  </div>
  {{!-- Description --}}
  <div class="sheet-block multiline">
    {{item.data.data.description}}
  </div>
</section>