{{!-- Parameters:
viewModel: {SkillAbilityListItemViewModel}
cssClass: {undefined | String}
--}}
<div class="custom-system-list-item{{#if cssClass}} {{cssClass}}{{/if}}">
  {{!-- Row 1 --}}
  <div class="flex flex-row">
    <div class="flex flex-grow">
      {{!-- Send to chat --}}
      {{> buttonSendToChat viewModel=viewModel.vmBtnSendToChat }}
      {{!-- Name --}}
      <span class="width-min-xl">
        {{> inputLabel text="ambersteel.labels.name"}}
      </span>
      {{> inputImage viewModel=viewModel.vmImg cssClass="custom-icon-sm" }}
      {{> inputTextField viewModel=viewModel.vmTfName }}
    </div>
    {{!-- Delete --}}
    {{> buttonDelete viewModel=viewModel.vmBtnDelete }}
  </div>
  {{!-- Row 2 --}}
  <div class="grid grid-2col">
    {{!-- Required Level --}}
    <div class="fill">
      <div class="flex-grow">
        {{> inputLabel text="ambersteel.labels.skillAbilityRequirement"}}
      </div>
      <div class="width-md">
        {{> inputNumberSpinner viewModel=viewModel.vmNsRequiredLevel }}
      </div>
    </div>
    {{!-- AP cost --}}
    <div class="flex-grow">
      {{> inputLabel text="ambersteel.labels.apCost"}}
    </div>
    <div class="width-md">
      {{> inputNumberSpinner viewModel=viewModel.vmNsApCost }}
    </div>
  </div>
  {{!-- Lots of optional content here --}}
  {{!-- Obstacle --}}
  <div class="grid grid-2col{{#if viewModel.hideObstacle}} hidden{{/if}}">
    <div class="fill">
      {{> inputLabel text="ambersteel.roll.obstacleAbbreviation"}}
    </div>
    <div class="fill">
      {{> inputTextField viewModel=viewModel.vmTfObstacle }}
    </div>
  </div>
  {{!-- Distance --}}
  <div class="grid grid-2col{{#if viewModel.hideDistance}} hidden{{/if}}">
    <div class="fill">
      {{> inputLabel text="ambersteel.labels.distance"}}
    </div>
    <div class="fill">
      {{> inputTextField viewModel=viewModel.vmTfDistance }}
    </div>
  </div>
  {{!-- Attack type --}}
  <div class="grid grid-2col{{#if viewModel.hideAttackType}} hidden{{/if}}">
    <div class="fill">
      {{> inputLabel text="ambersteel.labels.attackType"}}
    </div>
    <div class="fill">
      {{> inputDropDown viewModel=viewModel.vmDdAttackType }}
    </div>
  </div>
  {{!-- Condition --}}
  <div class="grid grid-2col{{#if viewModel.hideCondition}} hidden{{/if}}">
    <div class="fill">
      {{> inputLabel text="ambersteel.labels.skillAbilityCondition"}}
    </div>
    <div class="fill">
      {{> inputTextField viewModel=viewModel.vmTfCondition }}
    </div>
  </div>
  {{!-- Damage --}}
  <div class="flex flex-row{{#if viewModel.hideDamage}} hidden{{/if}}">
    <div class="width-sm">
      {{> buttonRoll viewModel=viewModel.vmBtnRollDamage}}
    </div>
    <ol class="unstyled-list flex-grow">
      {{#each viewModel.skillAbility.damage as |obj index|}}
        <li class="ambersteel-list-row flex flex-row">
          <div class="flex flex-row">
            {{!-- Damage formula --}}
            <div class="width-min-xl">
              {{> inputLabel text="ambersteel.labels.damage"}}
            </div>
            <span class="width-min-xxl flex-grow">
              {{> inputTextField viewModel=viewModel.vmTfDamage }}
            </span>
            {{!-- Damage type --}}
            <div class="width-min-xxl">
              {{> inputLabel text="ambersteel.labels.damageType"}}
            </div>
            <span class="width-xxl">
              {{> inputDropDown viewModel=viewModel.vmDdDamageType }}
            </span>
          </div>
        </li>
      {{/each}}
    </ol>
  </div>
  {{!-- Description --}}
  <div class="flex flex-row">
    {{> inputTextarea viewModel=viewModel.vmTaDescription cssClass="fill" }}
  </div>
</div>