{{!-- Required context:
isEditable: {Boolean}
isSendable: {Boolean}
skillItem: {AmbersteelItem}
itemId: {String}
item: {Item}
skillAbility = {
  name: {String}
  description: {String}
  requiredLevel: {Number}
  condition: {String}
  img: {String}
  apCost: {Number|undefined}
  distance: {Number|undefined}
  damageFormula: {String}
  damageType: {CONFIG.ambersteel.damageTypes|undefined}
  isCustom: {Boolean}
}
--}}
{{!-- Row 1 --}}
<div class="flex flex-row">
  <div class="flex flex-grow">
    {{!-- Send to chat --}}
    {{#if isSendable}}
      {{> buttonSendToChat itemId=itemId propertyPath=(concat "data.data.abilities[" key "]") }}
    {{/if}}
    {{!-- Name --}}
    <span class="width-min-xl">
      {{> inputLabel for=(concat "name[" key "]") text="ambersteel.labels.name"}}
    </span>
    {{> inputTextField vm=(createInputTextFieldViewModel isEditable isSendable item (concat "data.data.abilities[" key "].name") "ambersteel.labels.name") }}
  </div>
  {{!-- Delete --}}
  {{#if isEditable}}
    {{> buttonDelete itemId=itemId propertyPath=(concat "data.data.abilities[" key "]") promptConfirm=true promptLocalizableTitle="ambersteel.dialog.titleConfirmDeletionSkillAbilityQuery" }}
  {{/if}}
</div>
{{!-- Row 2 --}}
<div class="flex flex-row">
  {{!-- At level --}}
  <div class="flex flex-row">
    <span class="width-min-xl">
      {{> inputLabel for=(concat "requiredLevel[" key "]") text="ambersteel.labels.skillAbilityRequirement"}}
    </span>
    <span class="width-md">
      {{> inputNumberSpinner vm=(createInputNumberSpinnerViewModel isEditable isSendable item (concat "data.data.abilities[" key "].requiredLevel") 1 0 undefined) }}
    </span>
  </div>
  {{!-- Obstacle --}}
  <div class="flex flex-row">
    <span class="width-min-xl">
      {{> inputLabel for=(concat "obstacle[" key "]") text="ambersteel.roll.obstacleAbbreviation"}}
    </span>
    <span class="width-xxl">
      {{> inputTextField vm=(createInputTextFieldViewModel isEditable isSendable Item (concat "data.data.abilities[" key "].obstacle") "") }}
    </span>
  </div>
</div>
{{!-- Row 3 --}}
<div class="flex flex-row">
  {{!-- Distance --}}
  <div class="width-min-xl">
    {{> inputLabel for=(concat "distance[" key "]") text="ambersteel.labels.distance"}}
  </div>
  <span class="width-md">
    {{> inputNumberSpinner vm=(createInputNumberSpinnerViewModel isEditable isSendable item (concat "data.data.abilities[" key "].distance") 1 0 undefined) }}
  </span>
  {{!-- AP cost --}}
  <div class="width-min-xl">
    {{> inputLabel for=(concat "apCost[" key "]") text="ambersteel.labels.apCost"}}
  </div>
  <span class="width-md">
    {{> inputNumberSpinner vm=(createInputNumberSpinnerViewModel isEditable isSendable item (concat "data.data.abilities[" key "].apCost") 1 0 undefined) }}
  </span>
  {{!-- Attack type --}}
  <div class="width-min-xl">
    {{> inputLabel for=(concat "attackType[" key "]") text="ambersteel.labels.attackType"}}
  </div>
  <span class="width-min-lg">
    {{> inputDropDown vm=(createInputDropDownViewModel isEditable isSendable item (concat "data.data.abilities[" key "].attackType") (game.ambersteel.getAttackTypeOptions)) }}
  </span>
</div>
{{!-- Row 4 --}}
<div class="flex flex-row">
  {{!-- Damage formula --}}
  <div class="width-min-xl">
    {{> inputLabel for=(concat "damageFormula[" key "]") text="ambersteel.labels.damage"}}
  </div>
  {{> buttonRoll
    type="generic"
    itemId=itemId
    propertyPath=(concat "data.data.abilities[" key "].damageFormula")
    chatTitle=ability.name
  }}
  <span class="width-min-xxl flex-grow">
    {{> inputTextField vm=(createInputTextFieldViewModel isEditable isSendable Item (concat "data.data.abilities[" key "].damageFormula") "") }}
  </span>
  {{!-- Damage type --}}
  <div class="width-min-xxl">
    {{> inputLabel for=(concat "damageType[" key "]") text="ambersteel.labels.damageType"}}
  </div>
  <span class="width-xxl">
    {{> inputDropDown vm=(createInputDropDownViewModel isEditable isSendable item (concat "data.data.abilities[" key "].damageType") (game.ambersteel.getDamageTypeOptions)) }}
  </span>
</div>
{{!-- Row 5 --}}
<div class="flex flex-row flex-grow">
  {{!-- Condition --}}
  <div class="width-min-xl">
    {{> inputLabel for=(concat "condition[" key "]") text="ambersteel.labels.skillAbilityCondition"}}
  </div>
  <div class="flex-grow">
    {{> inputTextField vm=(createInputTextFieldViewModel isEditable isSendable Item (concat "data.data.abilities[" key "].condition") "") }}
  </div>
</div>
{{!-- Row 6 --}}
{{!-- Description --}}
<div class="flex flex-row">
  {{> inputTextarea vm=(createInputTextareaViewModel isEditable isSendable item (concat "data.data.abilities[" key "].description") (localize "ambersteel.labels.description") true false) cssClass="fill" }}
</div>