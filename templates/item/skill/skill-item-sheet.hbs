{{!-- Parameters:
viewModel: {SkillItemSheetViewModel}
cssClass: {undefined | String}
--}}
<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <div class="flex flex-column flex-grow">
      <div class="flex flex-row">
        {{> inputImage viewModel=viewModel.vmImg cssClass="custom-icon-md" }}
        <h1 class="header-name">
          {{> inputTextField viewModel=viewModel.vmTfName }}
        </h1>
        <div class="flex flex-center">
          {{> buttonSendToChat viewModel=viewModel.vmBtnSendToChat }}
        </div>
      </div>
    </div>
  </header>
  {{!-- Related Attribute --}}
  <div class="sheet-block grid-3col grid-gap-md margin-b-md">
    <div class="flex flex-middle flex-right">
      {{> inputLabel text="ambersteel.labels.relatedAttribute"}}
    </div>
    <div class="grid-span-2">
      {{> inputDropDown viewModel=viewModel.vmDdRelatedAttribute }}
    </div>
  </div>
  {{!-- Category --}}
  <div class="sheet-block grid-3col grid-gap-md margin-b-md">
    <div class="flex flex-middle flex-right">
      {{> inputLabel text="ambersteel.labels.category"}}
    </div>
    <div class="grid-span-2">
      {{> inputTextField viewModel=viewModel.vmTfCategory }}
    </div>
  </div>
  {{!-- IsMagicSchol --}}
  <div class="sheet-block grid-3col grid-gap-md margin-b-md">
    <div class="flex flex-middle flex-right">
      {{> inputLabel text="ambersteel.labels.magicSchool"}}
    </div>
    <div class="grid-span-2">
      {{> buttonToggle viewModel=viewModel.vmSwIsMagicSchool }}
    </div>
  </div>
  {{!-- Description --}}
  <div class="sheet-block flex flex-column margin-b-md">
    <h3 class="fancy-font">{{localize "ambersteel.labels.description"}}</h3>
    <div class="description-editor">
      {{editor content=viewModel.item.data.data.description target="data.description" button=true editable=viewModel.isEditable owner=viewModel.isOwner}}
    </div>
  </div>
  {{!-- Skill Abilites --}}
  {{> "systems/ambersteel/templates/item/skill-ability/skill-ability-table.hbs" viewModel=viewModel.vmSkillAbilityTable cssClass=(ifThenElse viewModel.isSkillAbilityListVisible "" "hidden") }}
</form>