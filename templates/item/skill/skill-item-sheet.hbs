{{!-- Requires context:
isEditable: {Boolean}
isSendable: {Boolean}
item: {Item} = {
  id: {String}
  name: {String}
  img: {String}
  data: {ItemData} = {
    data: {Object} = {
      description: {String}
      groupName: {String}
      value: {Number}
      successes: {Number}
      failures: {Number}
      relatedAttribute: {String}
      requiredSuccessses: {Number}
      requiredFailures: {Number}
      abilities: {[Object]} -> see item/skill-ability/skill-ability-table.hbs,
      category: {String}
    }
  }
}
--}}
<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <div class="flex flex-column flex-grow">
      <div class="flex flex-row">
        <img class="header-image" src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64" />
        <h1 class="header-name">
          {{> inputComponent type="single-line" propertyPath="name" isEditable=isEditable }}
        </h1>
        {{#if isSendable}}
          <div class="flex flex-center">
            {{> buttonSendToChat}}
          </div>
        {{/if}}
      </div>
    </div>
  </header>
  {{!-- Related Attribute --}}
  <div class="sheet-block flex flex-row margin-b-md">
    <div class="width-min-xxl">
      {{> inputLabel text="ambersteel.labels.relatedAttribute"}}
    </div>
    <div class="flex-grow">
      {{> inputComponent type="drop-down" propertyPath="data.data.relatedAttribute" 
        options=CONFIG.character.attributes
        optionValueProperty="name"
        optionDisplayProperty="localizableName"
        isEditable=isEditable
      }}
    </div>
  </div>
  {{!-- Category --}}
  <div class="sheet-block flex flex-row margin-b-md">
    <div class="width-min-xxl">
      {{> inputLabel text="ambersteel.labels.category"}}
    </div>
    <div class="flex-grow">
      {{> inputComponent type="single-line" propertyPath="data.data.category" isEditable=isEditable }}
    </div>
  </div>
  {{!-- Description --}}
  <div class="sheet-block flex flex-row margin-b-md">
    <div class="width-min-xxl">
      {{> inputLabel text="ambersteel.labels.description"}}
    </div>
    <div class="flex-grow">
      {{> inputComponent type="multi-line" propertyPath="data.data.description" placeholder=(localize "ambersteel.labels.description") isEditable=isEditable readOnlyCssClass="multiline"}}
    </div>
  </div>
  {{!-- Skill Abilites --}}
  {{#if (or (eq isEditable true) (neq item.data.data.abilities.length 0)) }}
    {{> "systems/ambersteel/templates/item/skill-ability/skill-ability-table.hbs" 
      isEditable=isEditable 
      skillItemId=item.id 
      abilities=item.data.data.abilities
      skillAbilitiesInitiallyVisible=true
    }}
  {{/if}}
</form>