{{!-- Requires context:
isEditable: {Boolean}
isSendable: {Boolean}
item: {Item} = {
  id: {String}
  name: {String}
  img: {String}
  data: {ItemData} = {
    data: {Object} = {
      description: {String}
      groupName: {String}
      value: {Number}
      successes: {Number}
      failures: {Number}
      relatedAttribute: {String}
      requiredSuccessses: {Number}
      requiredFailures: {Number}
      abilities: {[Object]} -> see item/skill-ability/skill-ability-table.hbs,
      category: {String}
    }
  }
}
actor: {Actor | undefined}
--}}
<section>
  {{!-- Header --}}
  <div class="flex flex-row">
    <div class="flex flex-center">
      <img class="inline-img header-image margin-r-sm" name="img" src="{{item.img}}" title="{{item.name}}" height="35" width="35" />
    </div>
    <h2 class="flex-grow">
      {{item.name}}
    </h2>
  </div>
  {{!-- Category --}}
  <div class="flex flex-row sheet-block margin-b-md">
    <div class="width-min-xl fancy-font">
      {{localize "ambersteel.labels.category"}}
    </div>
    <div class="flex-grow">
      {{item.data.data.category}}
    </div>
  </div>
  {{!-- Skill Abilites --}}
  {{#if (neq item.data.data.abilities.length 0) }}
    {{> "systems/ambersteel/templates/item/skill-ability/skill-ability-table.hbs" 
      isEditable=false 
      isSendable=false 
      CONFIG=CONFIG 
      item=item
      skillAbilitiesInitiallyVisible=false 
      visGroupId=(generateId) 
      oneColumn=true 
      actor=actor 
    }}
  {{/if}}
  {{!-- Description --}}
  <div class="sheet-block multiline">
    {{item.data.data.description}}
  </div>
</section>