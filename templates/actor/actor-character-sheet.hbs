<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">

  {{!-- Sheet Header --}}
  <header class="sheet-header">
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100"/>
    <div class="header-fields">
      <h1 class="charname fancy-font"><input name="name" type="text" value="{{actor.name}}" placeholder="Name"/></h1>
       {{> "systems/ambersteel/templates/actor/parts/actor-personals.hbs"}}
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs line-height tabs" data-group="primary">
    {{!-- Default tab is specified in actor-sheet.mjs --}}
    {{!-- <a class="item fancy-font" data-tab="basics">Basics</a> --}}
    <a class="item fancy-font" data-tab="attributes">{{localize "ambersteel.labels.tabAttributes"}}</a>
    <a class="item fancy-font" data-tab="skills">{{localize "ambersteel.labels.tabSkills"}}</a>
    {{#if (eq actor.type "pc")}}
    <a class="item fancy-font" data-tab="beliefs">{{localize "ambersteel.labels.tabBeliefs"}}</a>
    <a class="item fancy-font" data-tab="fate">{{localize "ambersteel.labels.tabFate"}}</a>
    {{/if}}
    <a class="item fancy-font" data-tab="health">{{localize "ambersteel.labels.tabHealth"}}</a>
    <a class="item fancy-font" data-tab="possessions">{{localize "ambersteel.labels.tabPossessions"}}</a>
    <a class="item fancy-font" data-tab="biography">{{localize "ambersteel.labels.tabBiography"}}</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Basics Tab --}}
    {{!-- <div class="tab basics" data-group="primary" data-tab="basics">
       {{> "systems/ambersteel/templates/actor/parts/actor-basics.hbs"}}
    </div> --}}

    {{!-- Attributes Tab --}}
    <div class="tab attributes" data-group="primary" data-tab="attributes">
       {{> "systems/ambersteel/templates/actor/parts/actor-attributes.hbs"}}
    </div>

    {{!-- Skills Tab --}}
    <div class="tab skills" data-group="primary" data-tab="skills">
       {{> "systems/ambersteel/templates/actor/parts/actor-skills.hbs"}}
    </div>

    {{#if (eq actor.type "pc")}}
    {{!-- Beliefs Tab --}}
    <div class="tab beliefs" data-group="primary" data-tab="beliefs">
       {{> "systems/ambersteel/templates/actor/parts/actor-beliefs.hbs"}}
    </div>

    {{!-- Fate Tab --}}
    <div class="tab fate" data-group="primary" data-tab="fate">
       {{> "systems/ambersteel/templates/actor/parts/actor-fate.hbs"}}
    </div>
    {{/if}}

    {{!-- Health Tab --}}
    <div class="tab health" data-group="primary" data-tab="health">
       {{> "systems/ambersteel/templates/actor/parts/actor-health.hbs"}}
    </div>

    {{!-- Possessions Tab --}}
    <div class="tab possessions" data-group="primary" data-tab="possessions">
       {{> "systems/ambersteel/templates/actor/parts/actor-possessions.hbs"}}
    </div>

    {{!-- Biography Tab --}}
    <div class="tab biography" data-group="primary" data-tab="biography">
       {{> "systems/ambersteel/templates/actor/parts/actor-biography.hbs"}}
    </div>

  </section>
</form>

