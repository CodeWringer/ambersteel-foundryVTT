{{!-- Requires parameters:
isEditable: {Boolean},
data: {Object} where Object = {
  biography: {Object} where Object = {
    origin: {String},
    youth: {String},
    lastFewYears: {String}
  }
}
--}}
<section>
  <div class="sheet-block">
    <h3>
      <label class="fancy-font" for="data.biography.origin">{{localize "ambersteel.biography.origin"}}</label>
    </h3>
    {{#if isEditable}}
      <textarea class="resize-vertical" name="data.biography.origin">{{data.biography.origin}}</textarea>
    {{else}}
      <span class="multiline">{{data.biography.origin}}</span>
    {{/if}}
  </div>
  <div class="sheet-block">
    <h3>
      <label class="fancy-font" for="data.biography.youth">{{localize "ambersteel.biography.youth"}}</label>
    </h3>
    {{#if isEditable}}
      <textarea class="resize-vertical" name="data.biography.youth">{{data.biography.youth}}</textarea>
    {{else}}
      <span class="multiline">{{data.biography.youth}}</span>
    {{/if}}
  </div>
  <div class="sheet-block">
    <h3>
      <label class="fancy-font" for="data.biography.lastFewYears">{{localize "ambersteel.biography.lastFewYears"}}</label>
    </h3>
    {{#if isEditable}}
      <textarea class="resize-vertical" name="data.biography.lastFewYears">{{data.biography.lastFewYears}}</textarea>
    {{else}}
      <span class="multiline">{{data.biography.lastFewYears}}</span>
    {{/if}}
  </div>
</section>