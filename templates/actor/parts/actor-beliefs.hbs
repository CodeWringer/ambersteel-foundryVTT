{{!-- Requires parameters:
isEditable: {Boolean}
isSendable: {Boolean}
actor: {Object} = {
  data: {Object} where Object = {
    beliefSystem: {Object} where Object = {
      ambition: {String},
      beliefs: {[String]},
      instincts: {[String]}
    }
  }
}
--}}
<section>
  <div class="sheet-block">
    <h3>
      <label class="fancy-font">{{localize "ambersteel.beliefSystem.ambition"}}</label>
    </h3>
      {{> inputTextField vm=(createInputTextFieldViewModel isEditable isSendable actor "data.data.beliefSystem.ambition" "") }}
  </div>
  <div class="sheet-block">
    <h3>
      <label class="fancy-font">{{localize "ambersteel.beliefSystem.beliefs"}}</label>
    </h3>
    {{#each data.beliefSystem.beliefs as |belief key|}}
      {{> inputTextField vm=(createInputTextFieldViewModel ../isEditable ../isSendable ../actor (concat "data.data.beliefSystem.beliefs[" key "]") "") }}
    {{/each}}
  </div>
  <div class="sheet-block">
    <h3>
      <label class="fancy-font">{{localize "ambersteel.beliefSystem.instincts"}}</label>
    </h3>
    {{#each data.beliefSystem.instincts as |instinct key|}}
      {{> inputTextField vm=(createInputTextFieldViewModel ../isEditable ../isSendable ../actor (concat "data.data.beliefSystem.instincts[" key "]") "") }}
    {{/each}}
  </div>
</section>