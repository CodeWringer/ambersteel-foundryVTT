{{!-- Requires parameters:
viewModel: {ActorBeliefsViewModel}
--}}
<section>
  <div class="sheet-block">
    <h3>
      <label class="fancy-font">{{localize "ambersteel.beliefSystem.ambition"}}</label>
    </h3>
      {{> inputTextField viewModel=viewModel.vmTfAmbition }}
  </div>
  <div class="sheet-block">
    <h3>
      <label class="fancy-font">{{localize "ambersteel.beliefSystem.beliefs"}}</label>
    </h3>
    {{#each viewModel.beliefViewModels as |vm index|}}
      {{> inputTextField viewModel=vm }}
    {{/each}}
  </div>
  <div class="sheet-block">
    <h3>
      <label class="fancy-font">{{localize "ambersteel.beliefSystem.instincts"}}</label>
    </h3>
    {{#each viewModel.instinctViewModels as |vm index|}}
      {{> inputTextField viewModel=vm }}
    {{/each}}
  </div>
</section>