{{!-- Requires parameters:
isEditable: {Boolean}
isSendable: {Boolean}
isOwner: {Boolean}
isGM: {Boolean}
actor: {Object}
--}}
<section>
  <div class="sheet-block">
    <h3>
      <label class="fancy-font">{{localize "ambersteel.beliefSystem.ambition"}}</label>
    </h3>
      {{> inputTextField vm=(createInputTextFieldViewModel isEditable isSendable actor "data.data.beliefSystem.ambition" "") }}
  </div>
  <div class="sheet-block">
    <h3>
      <label class="fancy-font">{{localize "ambersteel.beliefSystem.beliefs"}}</label>
    </h3>
    {{#each actor.data.data.beliefSystem.beliefs as |belief index|}}
      {{> inputTextField vm=(createInputTextFieldViewModel ../isEditable ../isSendable ../actor (concat "data.data.beliefSystem.beliefs[" index "]") "") }}
    {{/each}}
  </div>
  <div class="sheet-block">
    <h3>
      <label class="fancy-font">{{localize "ambersteel.beliefSystem.instincts"}}</label>
    </h3>
    {{#each actor.data.data.beliefSystem.instincts as |instinct index|}}
      {{> inputTextField vm=(createInputTextFieldViewModel ../isEditable ../isSendable ../actor (concat "data.data.beliefSystem.instincts[" index "]") "") }}
    {{/each}}
  </div>
</section>