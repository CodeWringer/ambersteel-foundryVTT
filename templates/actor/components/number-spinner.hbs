<span class="spinner-container">
    {{> @partial-block }}
    <div class="spinner-button-container">
        <a class="pad-sm button button-spinner button-spinner-up" data-step="1" data-min="0" title="{{localize ambersteel.labels.increment}}">
            <i class="fas fa-caret-up"></i>
        </a>
        <a class="pad-sm button button-spinner button-spinner-down" data-step="1" data-min="0" title="{{localize ambersteel.labels.decrement}}">
            <i class="fas fa-caret-down"></i>
        </a>
    </div>
</span>