{{!-- Requires parameters: 
viewModel: {SkillTableViewModel}
--}}
<div>
    <table class="skill-table">
        <tbody>
            <tr class="fancy-font header-row">
                {{#if viewModel.isEditable}}
                    <th class="skill-column-roll"></th>
                {{/if}}
                <th class="skill-column-roll"></th>
                <th class="skill-column-roll"></th>
                <th class="skill-column-name">
                    {{#if viewModel.isLearningSkillsTable}}
                        {{localize "ambersteel.labels.learningSkill"}}
                    {{else}}
                        {{localize "ambersteel.labels.knownSkill"}}
                    {{/if}}
                </th>
                <th class="skill-column-attribute">
                    {{localize "ambersteel.labels.attributeAbbreviation"}}
                </th>
                <th class="skill-column-level">
                    {{localize "ambersteel.labels.level"}}
                </th>
                <th class="skill-column-requirements">
                    {{localize "ambersteel.labels.requiredSuccessFailureAbbreviation"}}
                </th>
                <th class="skill-column-successes">
                    {{localize "ambersteel.labels.successAbbreviation"}}
                </th>
                <th class="skill-column-failures">
                    {{localize "ambersteel.labels.failureAbbreviation"}}
                </th>
                {{#if viewModel.isEditable}}
                    <th class="skill-column-delete"></th>
                {{/if}}
            </tr>
            {{#each viewModel.skills as |skill key|}}
                <tr class="item skill-item" data-item-id="{{skill.data.id}}">
                    {{#if ../isEditable}}
                        <td class="skill-column-roll">
                            {{> buttonRoll 
                                target=skill 
                                propertyPath="data.data.totalValue" 
                                chatTitle=skill.name 
                                rollType="dice-pool" 
                                callback="advanceSkillBasedOnRollResult" 
                                callbackData=skill.id 
                                actor=../viewModel.actor 
                            }}
                        </td>
                    {{/if}}
                    <td>
                        {{> buttonSendToChat target=skill }}
                    </td>
                    <td>
                        {{> buttonOpenSheet target=skill.name }}
                    </td>
                    <td class="fancy-font flex skill-column-name">
                        {{> inputTextField isEditable=../viewModel.isEditable propertyOwner=skill propertyPath="name" placeholder="ambersteel.labels.name" }}
                    </td>
                    <td class="skill-column-attribute">
                        {{> inputDropDown isEditable=../viewModel.isEditable propertyOwner=skill propertyPath="data.data.relatedAttribute" options=viewModel.attributeOptions }}
                    </td>
                    <td class="skill-column-level">
                        {{> inputNumberSpinner isEditable=../viewModel.isEditable propertyOwner=skill propertyPath="data.data.value" min=0 }}
                    </td>
                    <td class="skill-column-requirements">
                        {{skill.data.data.requiredSuccessses}} / {{skill.data.data.requiredFailures}}
                    </td>
                    <td class="skill-column-successes">
                        {{> inputNumberSpinner isEditable=../viewModel.isEditable propertyOwner=skill propertyPath="data.data.successes" min=0 }}
                    </td>
                    <td class="skill-column-failures">
                        {{> inputNumberSpinner isEditable=../viewModel.isEditable propertyOwner=skill propertyPath="data.data.failures" min=0 }}
                    </td>
                    {{#if ../viewModel.isEditable}}
                        <td class="skill-column-delete">
                            {{> buttonDelete target=skill withDialog=true }}
                        </td>
                    {{/if}}
                </tr>
                <tr>
                    <td style="display: table-cell;" colspan="100">
                        {{> "systems/ambersteel/templates/item/skill-ability/skill-ability-table.hbs" viewModel=viewModel.skillAbilityTableViewModel }}
                    </td>
                </tr>
            {{/each}}
            {{#if viewModel.isEditable}}
                <tr>
                    <td style="display: table-cell;" colspan="100">
                        <div class="flex">
                            <span class="flex-grow"></span>
                            <span class="width-sm">
                                {{> buttonAdd target=viewModel.actor creationType="skill" withDialog=true creationData=(concat "[value:"(ifThenElse viewModel.isLearningSkillsTable "0" "1") "]" ) }}
                            </span>
                        </div>
                    </td>
                </tr>
            {{/if}}
        </tbody>
    </table>
</div>